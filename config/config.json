{
    "core": {
        "port": "${PORT|7071}",
        "prefix": "/api"
    },
    "db": {
        "host": "${DB_HOST|localhost}",
        "port": "${DB_PORT|5432}",
        "username": "${DB_USERNAME|wume_composer}",
        "password": "${DB_PASSWORD|wume_composer}",
        "db_name": "${DB_DBNAME|wume_composer}"
    },
    "auth": {
        "secret": "${JWT_SECRET|Very_Secret_Key!}",
        "cookie_name": "jwt",
        "cookie_lifetime": 43200
    },
    "logger": {
        "debug": {
            "mode": "console"
        },
        "info": {
            "mode": "console"
        },
        "warning": {
            "mode": "console"
        },
        "error": {
            "mode": "console"
        },
        "fatal": {
            "mode": "file",
            "filename": "log/fatal.log"
        }
    }
}